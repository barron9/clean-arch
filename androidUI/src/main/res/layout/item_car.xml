<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/carmake"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="18dp" android:id="@+id/carmodel"
            app:layout_constraintStart_toStartOf="@+id/carmake" app:layout_constraintTop_toBottomOf="@+id/carmake"
            android:textStyle="italic"/>
</androidx.constraintlayout.widget.ConstraintLayout>